<h4>Детали поста:</h4>  
  <br>
  <p>
  <%= @row['content'] %>
  <br>
  <br>
  Добавлено <%= @row['created_date'] %>
  </p>
  <br>
  <h4>Комментарии:</h4>
  <br>
  <% @comments.each do |comment_item| %>
      <p>
          <%= comment_item['content'] %>
          <br>
          <br>
        <span style="font-size: 75%; color: #999">Добавлен <%= comment_item['created_date'] %>
      </p>
      <hr>
  <% end %>

  <p>
    <form action="/details/<%= @row['id'] %>" method="POST" role="form">
        <textarea name="content" class="form-control" rows="4" placeholder="Введите здесь текст поста"></textarea>
        <br />
        <button type="submit" class="btn btn-primary">Добавление комментария</button>
    </form>
  </p>
  